<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/sortearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sortearPedra"
        android:text="@string/sortear" />

    <TextView
        android:id="@+id/numeroTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@id/sortearButton"/>

    <TextView
        android:id="@+id/numeroSorteadoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/numeros_sorteados"
        android:layout_below="@id/numeroTextView"/>

    <TextView
        android:id="@+id/card1TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@id/numeroSorteadoTextView"/>

    <TextView
        android:id="@+id/card2TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@id/card1TextView"/>

    <TextView
        android:id="@+id/card3TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@id/card2TextView"/>

    <TextView
        android:id="@+id/bingoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card3TextView"/>
</RelativeLayout>